@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item mx-md-1">
        <a id="manage" class="nav-link text-white text-center bg-black rounded-pill" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-white text-center bg-black rounded-pill">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item mx-md-1">
        <a class="nav-link text-white text-center bg-black rounded-pill" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
